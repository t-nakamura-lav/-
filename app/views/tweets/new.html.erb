<div class="container">
  <div class="row">
    <h4 class="head-line text-center">tweet投稿フォーム</h4>
    <%# if @user.errors.any? %>
    <!--<ul class="error_messages">-->
    <!--  <h3><%#= @user.errors.count %>errors prohibited this user from being saved:</h3>-->
    <!--    <%# @user.errors.full_messages.each do |message| %>-->
    <!--    <%#= message %>-->
    <!--    <%# end %>-->
    <!--</ul>-->
    <!--<%# end %>-->

    <%= form_with model:@tweet, local: true do |f| %>
       <div class="form-group col-xs-12">
        <%= f.label :"がんばったこと", class: "col-sm-5 control-label" %>
        <%= f.text_field :challenge, class: "col-sm-11 form-control-static" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :"がんばった時間", class: "col-sm-5 control-label" %>
        <%= f.select :hour_attribute,Tweet.hour_attributes.keys, {} %>時間
        <%= f.select :minute_attribute,Tweet.minute_attributes.keys, {} %>分
        <%#= f.time_select :created_at, prompt:true, ignore_data:true, class: 'form-control' %>
      </div>
       <div class="form-group col-xs-12">
        <%= f.label :"つぶやき", class: "col-sm-5 control-label" %>
        <%= f.text_field :tweet, class: "col-sm-11 form-control-static" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :"写真", class: "col-sm-5 control-label" %>
        <%= f.file_field :images, multiple: true %>
      </div>

      <!--モデルに書いたenumを呼び出す-->
      <div class="form-group col-xs-12">
        <%= f.label :"今日のごほうびスタンプ", class: "col-sm-5 control-label" %>
        <%#= f.select :stamp_type,Tweet.stamp_types.keys, {} %>
        <%= f.radio_button :stamp_type, "stamp1.png" %>
        <%= f.radio_button :stamp_type, "stamp2.png" %>
        <%= f.radio_button :stamp_type, "stamp3.png" %>
        <%= f.radio_button :stamp_type, "stamp4.png" %>
      </div>
      <div class="actions col-xs-9 col-xs-offset-3">
        <%= f.submit "保存", class: "btn btn-primary save col-xs-6" %>
      </div>
    <% end %>
  </div>
</div>