<div class="container">
  <div class="row mx-auto">
    <div class="col-md-4 text-center" style= "margin: 15px 0 15px 0;">
      <h4>tweet投稿フォーム</h4>
    </div>
  </div>

  <div class="row mx-auto">
    <div class="col-md-12" style= "margin: 15px 0 15px 0;">
    <%= form_with model:@tweet, local: true do |f| %>
       <div class="form-group">
        <%= f.label :"がんばったこと", class: "col-sm-2 control-label" %>
        <%= f.text_field :challenge, class: "col-sm-6 form-control-static" %>
      </div>
      <div class="form-group">
        <%= f.label :"がんばった時間", class: "col-sm-2 control-label" %>
        <%= f.select :hour_attribute,Tweet.hour_attributes.keys, {} %>時間
        <%= f.select :minute_attribute,Tweet.minute_attributes.keys, {} %>分
      </div>
       <div class="form-group">
        <%= f.label :"つぶやき", class: "col-sm-2 control-label" %>
        <%= f.text_area :tweet, rows:'3', cols:'70',placeholder: "今日の取り組み、がんばった内容、要点、今の気持ちなど" %>
      </div>
      <div class="form-group">
        <%= f.label :"写真", class: "col-sm-2 control-label" %>
        <%= f.file_field :images, multiple: true %>
      </div>

      <div class="actions text-right">
        <%= f.submit "保存", class: "btn btn-outline-info" %>
      </div>
    <% end %>
    </div>
  </div>
</div>