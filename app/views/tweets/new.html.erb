    <%= form_with model:@tweet, local: true do |f| %>
       <div class="form-group col-xs-12">
        <%= f.label :"がんばったこと", class: "col-sm-5 control-label" %>
        <%= f.text_field :challenge, class: "col-sm-11 form-control-static" %>
      </div>
      <div class="form-group col-xs-12">
        <%#= f.label :"がんばった時間", class: "col-sm-5 control-label" %>
        <%#= f.text_field :name, class: "name col-sm-6 form-control-static name" %>
      </div>
       <div class="form-group col-xs-12">
        <%= f.label :"つぶやき", class: "col-sm-5 control-label" %>
        <%= f.text_field :tweet, class: "col-sm-11 form-control-static" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :"写真", class: "col-sm-5 control-label" %>
        <%= f.file_field :images, multiple: true %>
      </div>

      <!--モデルに書いたenumを呼び出す-->
      <div class="form-group col-xs-12">
        <%#= f.label :"今日のごほうびスタンプ", class: "col-sm-5 control-label" %>
        <%#= f.radio_button :stamp_type, 0 %>
        <%#= f.radio_button :stamp_type, 1 %>
        <%#= f.radio_button :stamp_type, 2 %>
        <%#= f.radio_button :stamp_type, 3 %>
      </div>
      <div class="actions col-xs-9 col-xs-offset-3">
        <%= f.submit "保存", class: "btn btn-primary save col-xs-6" %>
      </div>
    <% end %>
  </div>
</div>