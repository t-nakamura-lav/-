<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <div class="tweet_box">
        <h4>がんばったこと・つぶやきの編集</h4><br><br>

        <%= form_with model:@tweet, local: true do |f| %>
        <div class="form-group">
          <%= f.label :" がんばったこと", class: "col-sm-3 control-label far fa-flag" %>
          <%= f.text_field :challenge, class: "col-sm-7 form-control-static" %>
        </div>
        <div class="form-group">
          <%= f.label :" がんばった時間", class: "col-sm-3 control-label fas fa-history" %>
          <%= f.select :hour_attribute,Tweet.hour_attributes.keys, {} %>時間
          <%= f.select :minute_attribute,Tweet.minute_attributes.keys, {} %>分
        </div>
         <div class="form-group">
          <%= f.label :" つぶやき", class: "col-sm-3 control-label" %>
          <%= f.text_area :tweet, rows:'4', cols:'80' %>
        </div>
        <div class="form-group">
          <%= f.label :" 写真", class: "col-sm-3 control-label far fa-image " %>
          <%= f.file_field :images, multiple: true %>
        </div>

        <div class="actions text-right">
          <%= f.submit "保存", class: "btn btn-outline-info" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>