<div class="container">
  <div class="row">
    <div class="col-md-4 text-center" style="margin: 15px 0 15px 0;">
      <h4>ユーザー検索結果</h4>
    </div>
  </div>

<!--users/show上部　Myページ情報引用-->
<% if @results.exists? %>
  <% @results.each do |user| %>
   <div class="row"  style= "border-bottom: 1px solid #bbbbbb;">
      <table class='table table-borderless'>
        <thead>
          <tr>
            <th>
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" ,class: "rounded-circle" %>
                <%= user.name %>
              <% end %>
            </th>
            <td><%= user.age_status %></td>
            <td><%= user.job_status %></td>
            <td><%= user.challenge_contents %> </td>
            <td><%= user.introduction %></td>
            <td>
              <% if user.id == current_user.id %>
                <%= link_to "マイページ編集", edit_user_path(user), class: "btn btn-outline-success" %>
              <% else %>
                <%= render 'relationships/follow_btn', user: user %>
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</div>