<div class="container">
  <div class="row">
    <div class="col-md-4 text-center" style="margin: 15px 0 15px 0;">
      <h4>Myページ</h4>
    </div>
  </div>

  <div class="row" style= "border-bottom: 1px solid #bbbbbb;">
    <div class="col-md-3 text-right">
      <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, format: 'jpeg',fallback: "no_image.jpg" ,class: "rounded-circle" %>
    </div>
    <div class="col-md-8 text-left">
    <p><%= @user.name %>
    <%= @user.age_status %>  <%= @user.job_status %></p><br>
    <p><%= @user.challenge_contents %> <br>
    <p><%= @user.introduction %>
    <% if @user.id == current_user.id %>
      <%= link_to "マイページ編集", edit_user_path(@user), class: "btn btn-outline-success" %>
    <% else %>
      <%= render 'relationships/follow_btn', user: @user %>
    <% end %></p>
    <p><%= render 'relationships/follow_count', user: @user %></p>
    </div>
  </div>

  <% @tweets.each do |tweet| %>
  <div class="row" style= "border-bottom: 1px solid #bbbbbb;">
    <div class="col-md-3 text-right">
      <%= link_to tweet_path(tweet) do %>
        <%= attachment_image_tag tweet.user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" ,class: "rounded-circle" %>
      <% end %>
    </div>

    <div class="col-md-8 text-left">
      <table class='table table-borderless'>
        <thead>
          <tr>
            <th style="width: 50%"><%= link_to tweet.user.name, tweet_path(tweet) %></th>
            <th style="width: 50%"><%= tweet.created_at.strftime('%Y/%m/%d %H:%M') %></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td class="marker">
              <i class= "far fa-flag" style="color:#66ff00 ;"></i>
              <%= tweet.challenge %>
             </td>
            <td>
              <i class= "fas fa-history"></i>
              <%= tweet.hour_attribute %>時間　<%= tweet.minute_attribute %>分
            </td>
          </tr>
        </tbody>

        <tbody>
          <tr>
            <td colspan="2"><%= tweet.tweet %></td>
          </tr>
        </tbody>

        <tbody>
          <tr>
            <td colspan="2"><% if tweet.images.attached? %>
                  <% tweet.images.each do |image| %>
                    <%= image_tag image.variant(resize:'200x200') %>
                  <% end %>
                <% end %>
            </td>
          </tr>
        </tbody>

        <tbody>
          <tr>
            <td>
              <%= link_to tweet_path(tweet) do %>
                <p class="far fa-comment" style="color:#ff6f00 ;">
                <%= tweet.comments.count %> コメント</p>
              <% end %>
            </td>

            <!--いいね非同期通信-->
            <td id="like-btn">
              <%= render 'likes/like-btn', tweet: tweet %>
            </td>
          </tr>
        </tbody>
      </table>
     </div>
  </div>
<% end %>
  <%= paginate @tweets %>
</div>
