<div class="container">
  <div class="row">
    <div class="col-7">
      <h4 class="head-line text-center">マイページ編集</h4>

    <%# if @user.errors.any? %>
    <!--<ul class="error_messages">-->
    <!--  <h3><%#= @user.errors.count %>errors prohibited this user from being saved:</h3>-->
    <!--    <%# @user.errors.full_messages.each do |message| %>-->
