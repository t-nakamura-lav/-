<header>
  <div class="wrapper site-header__wrapper">
    <a href="#" class="brand">
      <%#= link_to image_tag("logo.png"), root_path, class: "navbar-brand", 'data-turbolinks': false %>
      <%= link_to "ゆるわーく", root_path %>
    </a>
    <nav class="nav">
      <button class="nav__toggle" aria-expanded="false" type="button">
        menu
      </button>

      <ul class="nav__wrapper">
        <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user.id) do %>
            <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg",class: "rounded-circle" %>
          <% end %>
        </li>
        <li class="nav__item">
          <%= link_to "ほーむ", tweets_path,class: 'fas fa-home nav-link text-light' %>
        </li>
        <li class="nav__item">
          <%#= @user.inspect %> <%= link_to "　きろく", new_tweet_path(current_user.id),class: 'fas fa-edit nav-link text-light' %>
        </li>
        <li class="nav__item"><%= link_to "　カレンダー",to_log_tweet_path(current_user.id),class: 'fas fa-calendar-alt nav-link text-light' %>
        </li>
        <li class="nav__item"><%= link_to "　検索", class: 'fas fa-search nav-link text-light' %>
        </li>
        <li class="nav__item"><%= link_to "　ログアウト", destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt faa-wrench nav-link text-light' %>
        </li>
      <% else %>
        <li class="nav__item"><%= link_to "　あばうと", homes_about_path,class: 'fas fa-user-plus nav-link text-light' %>
        </li>
        <li class="nav__item"><%= link_to "　新規登録", new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %>
        </li>
        <li class="nav__item"><%= link_to "　ログイン", new_user_session_path,class: 'fas fa-sign-in-alt nav-link text-light' %>
        </li>
      <% end %>
      </ul>
    </nav>
  </div>
</header>
 <script src="js/header-1.js"></script>
