<% tweet.comments.each do |comment| %>
<table class='comments-table' style= "border-bottom: 1px solid #bbbbbb;">
  <tbody>
    <tr>
      <td style="width: 30% text-center">
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" ,class: "rounded-circle") %>
          <%= comment.user.name %>
      </td>
      <td>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td style="width: 50%">
          <%= comment.comment %>
        <% end %>
      </td>
      <td style="width: 20%">
         <% if comment.user == current_user %>
        <div class="comment-delete">
          <%= link_to "削除", tweet_comment_path(comment.tweet, comment), method: :delete,remote: true,class: "btn btn-outline-danger" %>
        </div>
        <% end %>
      </td>
    </tr>
  </tbody><br>
  </table>
<% end %>
<br>
<div class="new-comment">
  <%= form_with(model:[tweet, comment], remote: true) do |f| %>
    <%= f.text_area :comment, rows:'5', cols:'80',placeholder: "コメントをここに" %>
    <%= f.submit "送信する",class: "btn btn-outline-info" %>
  <% end %>
</div>