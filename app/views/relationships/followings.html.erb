<div class="container">
  <div class="row">
    <div class="col-md-4 text-center" style="margin: 15px 0 15px 0;">
      <h4>フォロー中</h4>
    </div>
  </div>

<% if @users.exists? %>
  <% @users.each do |user| %>
  <div class="row" style= "border-bottom: 1px solid #bbbbbb;">
    <table class='table table-borderless'>
      <thead>
        <tr>
          <th style="width:25%;">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" ,class: "rounded-circle" %>
            <% end %>
            <%= link_to user.name, user_path(user) %>
          </th>
          <td style="width:20%;"><%= user.challenge_contents %></td>
          <td style="width:35%;"><%= user.introduction %></td>
          <td style="width:20%;"><%= render 'follow_btn', user: @user %></td>
        </tr>
      </thead>
    </table>
  </div>
  <% end %>
<% else %>
   <p>ユーザーはいません</p>
<% end %>
<%= paginate @users %>
</div>